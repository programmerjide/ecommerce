# Application
APP_ENV=local
APP_PORT=8080
LOG_LEVEL=info

GIN_MODE=debug

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=ecommerce
DB_SSLMODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRATION=24h

# OCR
OCR_PROVIDER=google_vision
GOOGLE_VISION_API_KEY=your_google_vision_api_key
OCR_CONFIDENCE_THRESHOLD=0.7

# Storage
STORAGE_PROVIDER=s3
AWS_BUCKET=ecommerce-meter-images
AWS_REGION=us-east-1
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_KEY=your_aws_secret_key
AWS_S3_ENDPOINT=http://localhost:9000

# Uploads
UPLOADS_PATH=./uploads
MAX_UPLOAD_SIZE_MB=10485760 # 10 MB

# Alternative: Cloudinary
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@powershare.ng

# SMS (Termii or Twilio)
SMS_PROVIDER=termii
TERMII_API_KEY=your_termii_api_key
TERMII_SENDER_ID=PowerShare

# Push Notifications
FIREBASE_CREDENTIALS_PATH=./configs/firebase-credentials.json